# Car Wash Management System - Environment Variables Template
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_NAME=carwash_db
DB_USER=carwash_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# ===========================================
# DJANGO CONFIGURATION
# ===========================================
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-very-long-random-secret-key-here-change-this-in-production

# Set to False in production
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ===========================================
# TIMEZONE CONFIGURATION
# ===========================================
TIME_ZONE=Asia/Dhaka

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Car Wash Management <noreply@yourdomain.com>

# ===========================================
# SECURITY SETTINGS (Production)
# ===========================================
# Uncomment these for production with SSL
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY

# ===========================================
# STATIC FILES CONFIGURATION
# ===========================================
STATIC_ROOT=/var/www/carwash/static/
MEDIA_ROOT=/var/www/carwash/media/

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/carwash/django.log

# ===========================================
# CACHE CONFIGURATION (Optional)
# ===========================================
# For Redis cache (uncomment if using Redis)
# CACHE_URL=redis://localhost:6379/1

# ===========================================
# MONITORING (Optional)
# ===========================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_DIR=/home/carwash/backups
BACKUP_RETENTION_DAYS=7

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to True for development
DEVELOPMENT_MODE=True

# ===========================================
# NOTES
# ===========================================
# 1. Never commit the actual .env file to version control
# 2. Generate a new SECRET_KEY for each environment
# 3. Use strong passwords for database credentials
# 4. Enable SSL settings only after SSL certificate is installed
# 5. Update ALLOWED_HOSTS with your actual domain names